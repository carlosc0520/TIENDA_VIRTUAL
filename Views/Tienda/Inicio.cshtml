@model TIENDA_VIRTUAL.Models.ProductoListViewModel

<div>
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-12 text-left">
                <h1>Bienvenido a la tienda virtual</h1>
                <p>En esta tienda virtual podrás encontrar los mejores productos a los mejores precios.</p>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <h2 class="text-center">Últimas novedades</h2>
            </div>
        </div>

        @if (Model.ListProductos != null && Model.ListProductos.Any())
        {
            <div class="row">
                @foreach (var producto in Model.ListProductos)
                {
                    <div class="col-md-4 col-12 mb-4">
                        <div class="card h-100">
                            <div class="card-img-top-container">
                                <img src="@producto.IMAGEN" class="card-img-top" alt="@producto.NOMBRE">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-center">@producto.NOMBRE</h5>
                                <p class="card-text flex-grow-1">@producto.DETALLE</p>
                                <a href="#" class="btn btn-primary mt-auto">Ver más</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="d-flex justify-content-center align-items-center" style="height: 200px;">
                <h4>No hay productos que mostrar</h4>
            </div>
        }
    </div>
</div>

<style>
    .card-img-top-container {
        overflow: hidden;
        height: 200px; /* Adjust the height as needed */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-img-top {
        object-fit: cover;
        max-height: 100%;
        width: auto;
        height: auto;
    }
</style>
